{
  "name": "notification-service",
  "version": "1.0.0",
  "description": "Notification service with email, Telegram, and SMS support",
  "author": "Ravshanbek Karimov",
  "license": "MIT",
  "keywords": [
    "notifications",
    "email",
    "telegram",
    "sms",
    "fastify",
    "rabbitmq",
    "postgresql",
    "microservice",
    "typescript"
  ],
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "worker": "tsx watch src/worker.ts",
    "worker:start": "node dist/worker.js",
    "migrate": "tsx src/db/migrate.ts",
    "migrate:down": "tsx src/db/migrate.ts down",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "fastify": "^4.25.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.0.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.0",
    "pg": "^8.11.0",
    "kysely": "^0.27.0",
    "amqplib": "^0.10.0",
    "nodemailer": "^6.9.0",
    "handlebars": "^4.7.0",
    "zod": "^3.22.0",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.0",
    "dotenv": "^16.3.0",
    "crypto-js": "^4.2.0",
    "twilio": "^4.20.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.0",
    "@types/amqplib": "^0.10.0",
    "@types/nodemailer": "^6.4.0",
    "@types/crypto-js": "^4.2.0",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
